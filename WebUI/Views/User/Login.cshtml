@model UserLoginViewModel

<h3 class="mb-5">Welcome to the Ideas App</h3>


<form asp-action="Login" asp-controller="User" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row">
        <div class="mb-3 col-md-4">
            <label for="Email" class="form-label">Email address</label>
            <input asp-for="Email" type="email" class="form-control" id="Email" aria-describedby="emailHelp">
            <p id="emailHelp" class="form-text font-weight-lighter">We'll never share your email with anyone else.</p>
        </div>
    </div>
    <div class="row">
        <div class="mb-3 col-md-4">
            <label for="Password" class="form-label">Password</label>
            <input asp-for="Password" type="password" class="form-control" id="Password">
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Log in</button>
</form>

<p class="mt-5">Don't have an account? <a asp-action="Register" asp-controller="User">Please register</a></p>
